extends ../layouts/accountLayout.pug
include ../mixins/landingMixin.pug
include ../mixins/accountMixin.pug

block headContent
    +notisHead
block content
    .home-progress 
        .row.m-0.w-100
            .col-10
                h2.home-progress-title أكمل إعدادات متجرك
                .home-progress-bar-parent.m-0 
                    .home-progress-bar-inner(style="width:57%")
                    h4
                        span مكتمل
                        span <div class="counter">57</div>% 
        a.icon(href="#")
            svg 
                use(href="../../assets/images/icons/icons.svg#arrow-left")
    .support-content
        h4.mb-4.text-center ماسبب تواصلك معنا
        ul.payments-list-check
            li 
                input(type="radio" name="payment" id="complaint")
                label(for="complaint") 
                    .title شكوى
            li 
                input(type="radio" name="payment" id="suggestion")
                label(for="suggestion") 
                    .title اقتراح
            li 
                input(type="radio" name="payment" id="opinions")
                label(for="opinions") 
                    .title اراء
            li 
                input(type="radio" name="payment" id="technical-problems")
                label(for="technical-problems") 
                    .title مشاكل فنية
            li 
                input(type="radio" name="payment" id="comment")
                label(for="comment") 
                    .title تعليق
        .form
            .row.m-0.w-100.mt-5
                .col-md-6 
                    h5.mb-4 ﺑﻴﺎﻧﺎت ﺗﻮاﺻﻞ اﻟﻤﻨﺸﺄة
                    .input-text-icon-box.form-group 
                        svg 
                            use(href="../../assets/images/icons/icons.svg#user-2")
                        span أﺳﻢ اﻟﻤﻨﺸﺄة :
                        input(type="text")
                    .input-text-icon-box.form-group 
                        svg 
                            use(href="../../assets/images/icons/icons.svg#envelope")
                        span اﻟﺒﺮﻳﺪ اﻟﺎﻟﻜﺘﺮوﻧﻰ :
                        input(type="text")  

                .col-md-6
                    +input({label:'ﻧﺺ اﻟﺮﺳﺎﻟﺔ ' } , true)
            .btn-submit.mt-5 
                +Button({color:'orange' , name:'ارسال ', class:'btn-fill'})









    