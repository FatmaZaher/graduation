mixin add_deal(prod)   
    .product.add-deal.d-flex.justify-content-between.mb-3
        .img
            img(src="../../assets/images/products/product-1.png" alt="")
        div
            p.name.m-0 بقالة
            h4 ليمون مزارع طازج
            span.number حجم المنتج 2 كم
            p نستلة - جهينة
        div
            p.m-0 السعر التقريبى
            p.price.m-0  150 دينار
        p.amount.m-0 الكمية 5
        div 
            svg.me-3
                use(href="../../assets/images/icons/icons.svg#delete")  
            svg
                use(href="../../assets/images/icons/icons.svg#edit")  

mixin merchant-details(details) 
    .merchant-details.d-flex.justify-content-between.mb-4
        .d-flex.justify-content-start.align-items-center 
            .img.me-3 
                img(src="../../assets/images/landing/avatar.png" alt="" class="img")
            .info
                h6 التاجر
                h5.mb-0 Grocery shope
        .d-flex.justify-content-end.align-items-center  
            if (details.chat)
                .message-view-box-actions 
                    //- +Button({color:'orange' , class:'btn-fill ms-2' , icon:'envelope'})
                    a(href='../../html/landing/chat.html').btnn-orange.btn.btnn.hvr-shadow
                        svg 
                            use(href='../../assets/images/icons/icons.svg#envelope')




