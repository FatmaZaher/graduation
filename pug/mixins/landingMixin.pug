mixin notisHead(text)
    .landing-notis-head.d-flex.justify-content-center.align-items-center 
        p.m-0 هل تريد ان تبدء صفقة جديدة الان ؟ 
        a(href='../../html/landing/add-deal.html').btnn-orange.btn.btnn.hvr-shadow.btn-fill
            span اضافة صفقة

mixin homeHead (head)
    .home-sec-head.mb-4  
        .text 
            h4  #{head.header}
            if head.pargh
                p  #{head.pargh}
            if head.link
                a(href=head.url).link #{head.link}
                    svg
                        use( href="../../assets/images/icons/icons.svg#arrow-right")

        .button 
            a(href=head.url).btnn-orange.btn.btnn.hvr-shadow
                span #{head.button}

mixin product (prod)
    a(href=prod.url).product.hvr-float-shadow     
        div
            .icon.d-flex.justify-content-center.align-items-center 
                svg 
                    use(href="../../assets/images/icons/icons.svg#heart-fill")
            if (prod.isDiscount == true)
                span.discount - 10%
            div
                .img
                    img(src="../../assets/images/"+ prod.img +".png" alt="")
            div
                p.name اسم التاجر
                h4 جبنة لافاش كيري
                p.price 150 دينار
                    span.old-price 50 دينار
                span.number 48 قطعة
            button.plus 
                svg
                    use(href="../../assets/images/icons/icons.svg#plus")
            
mixin bargain(bargain)
    a.bargain.hvr-float-shadow(href="../../html/landing/order-details.html")     
        .bargain-head 
            h6.m-0 حالة الطلب
            span  يتم التوصيل 
        .bargain-body 
            .row.w-100.m-0 
                .col-6
                    .bargain-body-sec
                        span إجمالي الطلب
                        h6 230 شيكل
                .col-6
                    .bargain-body-sec
                        span التاجر
                        h6 Grocery shope
                .col-6
                    .bargain-body-sec
                        span وقت وتاريخ الطلب
                        h6 20/10/2021 - 10:50 م

mixin offer(offer)
    a.offer.hvr-float-shadow(href="#")
        .offer-image
            img(src="../../assets/images/" + (offer.image) +".png" alt="")
        .offer-body
            h4.mb-2 #{offer.name}
            p.m-0 #{offer.discount}

mixin cart(prod)   
    .product.d-flex.justify-content-between.mb-3
        .img
            img(src="../../assets/images/products/product-1.png" alt="")
        div
            p.name.m-0 اسم التاجر
            h4 جبنة لافاش كيري
            span.number 48 قطعة
        div
            p.price.m-0 150 دينار
            span.old-price.m-0 50 دينار
        +input_number({label:'' })
        svg
            use(href="../../assets/images/icons/icons.svg#delete")  

mixin cart_delivery(prod)   
    .product.d-flex.justify-content-between.mb-3
        .img
            img(src="../../assets/images/products/product-1.png" alt="")
        div
            p.name.m-0 اسم التاجر
            h4 جبنة لافاش كيري
            span.number 48 قطعة
        div
            p.price.m-0 150 دينار
            span.old-price.m-0 50 دينار
