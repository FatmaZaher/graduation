extends ../layouts/landingLayout.pug
include ../mixins/landingMixin.pug

block content
    .cart-content
        .row.w-100.m-0
            .col-md-8
                h4.mb-4 عنوان التوصيل
                .row.w-100.m-0 
                    .col-lg-6 
                        +cardBox()

                    .col-lg-6 
                        +cardBox()

                .row.justify-content-center 
                    .col-lg-12
                        a.load-more-sec.mb-5 
                            p اضافة عنوان جديد
                .payments-list-check.ways.mt-5
                    h4.mb-4 اختار طريقة الشحن
                    ul.p-0.m-0
                        li.me-md-2
                            input(type="radio" name="payment" class="active" id="way-1")
                            label(for="way-1" class="active") 
                                .title طريقة شحن (1)
                        li 
                            input(type="radio" name="payment" id="way-2")
                            label(for="way-2") 
                                .title طريقة شحن (1)
                        li.me-md-2 
                            input(type="radio" name="payment" id="way-3")
                            label(for="way-3") 
                                .title طريقة شحن (1)
                        li 
                            input(type="radio" name="payment" id="way-4")
                            label(for="way-4") 
                                .title طريقة شحن (1)
                .day-time.mt-5 
                    h4.mb-4 يوم ووقت التوصيل
                    .d-flex.justify-content-between.align-items-start
                        button.btn.btnn.hvr-shadow(data-bs-toggle='modal' data-bs-target='#dayModal')
                            svg 
                                use(href='../../assets/images/icons/icons.svg#calender')
                            span أختر يوم التوصيل
                            .arrow
                                svg 
                                    use(href='../../assets/images/icons/icons.svg#arrow-3')
                        button.btn.btnn.hvr-shadow(data-bs-toggle='modal' data-bs-target='#timeModal')
                            svg 
                                use(href='../../assets/images/icons/icons.svg#clock')
                            span أختر وقت التوصيل
                            .arrow
                                svg 
                                    use(href='../../assets/images/icons/icons.svg#arrow-3')


                .order.mt-5
                    h4.mb-4 ملخص الطلبية
                    .products.mt-3
                        +cart_delivery()
                        +cart_delivery()

            .col-md-4
                .order-details.delivery
                    .p-4
                        h4.mb-4 طريقة الدفع
                    
                        ul.payments-list-check
                            li 
                                input(type="radio" name="payment" id="visa")
                                label(for="visa") 
                                    .title فيزا / ماستر كارد
                                    img(src="../../assets/images/payments/visa.png" alt="" class="img")
                                    img(src="../../assets/images/payments/visa-active.png" alt="" class="img-active")
                            li 
                                input(type="radio" name="payment" id="apple")
                                label(for="apple") 
                                    .title أبل باي
                                    img(src="../../assets/images/payments/apple-p.png" alt="" class="img")
                                    img(src="../../assets/images/payments/apple-p-active.png" alt="" class="img-active")
                            li 
                                input(type="radio" name="payment" id="mada")
                                label(for="mada") 
                                    .title كي نت / مدى
                                    img(src="../../assets/images/payments/mada.png" alt="" class="img")
                                    img(src="../../assets/images/payments/mada-active.png" alt="" class="img-active")
                            li 
                                input(type="radio" name="payment" id="cash")
                                label(for="cash") 
                                    .title كاش
                                    img(src="../../assets/images/payments/cash.png" alt="" class="img")
                                    img(src="../../assets/images/payments/cash-active.png" alt="" class="img-active")

                        hr 
                        .order-total 
                            ul 
                                li 
                                    h5 السعر الفرعي التقريبي 
                                    h6 350 شيكل
                                li 
                                    h5 التوصيل
                                        span.express Express 
                                    h6 350 شيكل
                                li 
                                    h5 كوبون الخصم 
                                    h6 20 شيكل
                                li 
                                    h5 إجمالي الطلبات
                                    h6 620 شيكل
                        .comp-order.mt-4
                            +Button({color:'orange' , name:'اتمام الطلب' , class:"btn-fill px-5" }) 
    .text-center.mt-5    
            h3 لنا مكان فى كل دُ كان
            p جميع عمليات الدفع والطلب لدينا مضمونة 100%     
    #dayModal.modal.fade(tabindex='-1' aria-labelledby='dayModalLabel' aria-hidden='true')
        .modal-dialog
            .modal-content.time-modal
                .modal-header
                    h5#timeModalLabel.modal-title 
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body.p-5
                    .cansel-offer-modal.p-0 
                        span.close(data-bs-toggle='modal' data-bs-target='#dayModal')
                            svg 
                                use(href='../../assets/images/icons/icons.svg#close')
                        h5.fw-bold معاد التوصيل
                        ul.p-0.m-0.w-100.payments-list-check.mt-4
                            li.me-md-2
                                input(type="radio" name="payment" class="active" id="day-1")
                                label(for="day-1" class="active") 
                                    .title اليوم 03/03/2022
                                    .express 
                                        p.m-0.fw-bold Express
                                        span SR 20+
                                        img(src="../../assets/images/landing/express.svg" alt="" class="img")

                            li 
                                input(type="radio" name="payment" id="day-2")
                                label(for="day-2") 
                                    .title غدا 22/4/2021
                            li.me-md-2 
                                input(type="radio" name="payment" id="day-3")
                                label(for="day-3") 
                                    .title الثلاثاء 22/4/2021
                            li 
                                input(type="radio" name="payment" id="day-4")
                                label(for="day-4") 
                                    .title الأربعاء 22/4/2021
                        button.w-100.btnn-orange.btn-fill.btn.btnn.hvr-shadow(data-bs-toggle='modal' data-bs-target='#dayModal')
                            span تم 
    #timeModal.modal.fade(tabindex='-1' aria-labelledby='timeModalLabel' aria-hidden='true')
        .modal-dialog
            .modal-content.time-modal
                .modal-header
                    h5#timeModalLabel.modal-title 
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body.p-5
                    .cansel-offer-modal.p-0 
                        span.close(data-bs-toggle='modal' data-bs-target='#timeModal')
                            svg 
                                use(href='../../assets/images/icons/icons.svg#close')
                        h5.fw-bold وقت التوصيل
                        ul.p-0.m-0.w-100.payments-list-check.mt-4
                            li.me-md-2
                                input(type="radio" name="payment" class="active" id="time-1")
                                label(for="time-1" class="active") 
                                    .title 10-12 صباحاَ
                            li 
                                input(type="radio" name="payment" id="time-2")
                                label(for="time-2") 
                                    .title 10-12 صباحاَ
                            li.me-md-2 
                                input(type="radio" name="payment" id="time-3")
                                label(for="time-3") 
                                    .title 10-12 صباحاَ 
                            li 
                                input(type="radio" name="payment" id="time-4")
                                label(for="time-4") 
                                    .title 10-12 صباحاَ
                            li 
                                input(type="radio" name="payment" id="time-4")
                                label(for="time-4") 
                                    .title 10-12 صباحاَ
                        button.w-100.btnn-orange.btn-fill.btn.btnn.hvr-shadow(data-bs-toggle='modal' data-bs-target='#timeModal')
                            span تم               