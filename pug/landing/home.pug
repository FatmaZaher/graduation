            .col   
                +product({isDiscount : true, img: 'landing/electronic/electronic-5', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : false, img: 'landing/electronic/electronic-1', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'landing/electronic/electronic-2', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'landing/electronic/electronic-3', url: '../../html/landing/product.html'})

    .img-section.mt-5 
        img(src="../../assets/images/landing/img-1.png" alt="")
    .stories-marchants.mt-5 
        -var head = {'button':'زيارة القسم','header':' عروض التجار' ,'url': '../../html/landing/product-list.html'}
            +homeHead(head) 
    .offers.mt-5 
        -var offers =[{'name':'الإلكترونيات','discount': 'خصم 50%','image': 'landing/offer/offer-1'},{'name':'البقالة','discount': 'خصم 20%','image': 'landing/offer/offer-2'},{'name':'العناية بالبشرة','discount': 'خصم 30%','image': 'landing/offer/offer-3'},{'name':'أدوات الحلاقة','discount': 'خصم 50%','image': 'landing/offer/offer-4'},{'name':'أدوات التجميل','discount': 'خصم 50%','image': 'landing/offer/offer-5'}]
