extends ../layouts/landingLayout.pug
include ../mixins/landingMixin.pug


block headContent
    +notisHead
block content 
    .home-slider
        .owl-carousel.owl-theme
            -var slideImgs = ['1', '1', '1']
            each slideImg , index in slideImgs 
                .itme 
                    img(src="../../assets/images/landing/home-slide-" + (slideImg) + ".png" alt="")
    .product-type-list.mt-5
        .owl-carousel.owl-theme
            -var types = ['خضراوات' , 'مخبوزات' , 'الدجاج' , 'حلويات وبسكويت' , 'وجبات خفيفة' , 'البقالة' , 'معلبات' , 'مجمدات' , 'العناية بالطفل' , 'العناية الشخصية' , 'منتجات الألبان' ]  
            each prduct_type , index in types 
                .item.product-type
                    input(type="checkbox" name="prduct_type" + index) 
                    .image 
                        img(src="../../assets/images/products-types/type-"+ (index + 1) +".png" alt="")
                    h3 #{prduct_type} 
    .products.mt-5
        -var head = {'header': 'وصل حديثا فى قسم البقالة','link':'زيارة القسم','button':'زيارة القسم' ,'url': '../../html/landing/product-list.html'}
        +homeHead(head)
        .row.m-0.w-100.mt-5.row-cols-1.row-cols-sm-2.row-cols-md-4
            .col 
                +product({isDiscount : true, img: 'products/product-1', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : false, img: 'products/product-2', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'products/product-3', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'products/product-4', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'products/product-5', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : false, img: 'products/product-1', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'products/product-2', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : true, img: 'products/product-3', url: '../../html/landing/product.html'})
                
    .img-section.mt-5 
        img(src="../../assets/images/landing/img-1.png" alt="")
    .bargains.mt-5
        -var head = {'header': 'الصفقات الحديثة','pargh':'أحدث الصفقات الي طلبها المستخدمين','button':'زيارة القسم' ,'url': '../../html/landing/product-list.html'}
        +homeHead(head)
        .row.m-0.w-100.mt-5
            .col-md-4
                .bargains-img
                    p أحدث صفقات البقالة
            .col-md-8
                .all-bargins 
                    p.mt-3
                        a(href="#") عرض جميع الصفقات لهذا القسم 
                            svg
                                use( href="../../assets/images/icons/icons.svg#arrow-right")
                    .row.m-0.w-100.mt-4
                        -var bargains = [{'case':'لم يتم الترسية بعد','section': 'بقالة - خضراوات','name': 'Grocery shope','amount': '40 صندوق','offer': '50 عرض'},{'case':'لم يتم الترسية بعد','section': 'بقالة - خضراوات','name': 'Grocery shope','amount': '40 صندوق','offer': '50 عرض'},{'case':'لم يتم الترسية بعد','section': 'بقالة - خضراوات','name': 'Grocery shope','amount': '40 صندوق','offer': '50 عرض'},{'case':'لم يتم الترسية بعد','section': 'بقالة - خضراوات','name': 'Grocery shope','amount': '40 صندوق','offer': '50 عرض'}]  
                        each bargain , index in bargains
                            .col-md-6.mb-4
                                +bargain(bargain, index)
    .electronics.mt-5
        -var head = {'header': 'حديثا فى قسم الالكترونيات','link':'زيارة القسم','button':'زيارة القسم' ,'url': '../../html/landing/product-list.html'}
        +homeHead(head)
        .row.m-0.w-100.mt-5.row-cols-1.row-cols-sm-2.row-cols-md-4
            .col 
                +product({isDiscount : true, img: 'landing/electronic/electronic-1', url: '../../html/landing/product.html'})
            .col   
                +product({isDiscount : false, img: 'landing/electronic/electronic-2', url: '../../html/landing/product.html'})
            .col   
