mixin listLinks(listSidebar)

    .mt-5
        ul
            each listItem in listSidebar
                li.mb-3
                    a(href=listItem.url).d-flex.justify-content-between.align-items-center
                        div.d-flex
                            .icon  
                                img(src="../../assets/images/account-menu/" + listItem.icon + ".svg" alt="")
                            span #{listItem.title} 
                        if listItem.number
                            .number.fw-bold #{listItem.number}

- var listSidebar = [{"title":"طلباتي","icon":"newOrder", "url": "../account/home.html"},{"title":"الفروع","icon":"layer", "url": "../account/address.html"},{"title":"طرق الدفع","icon":"credit", "url": "../account/payments.html"},{"title":"الدعم الفنى ","icon":"technical-support", "url": "../account/technical-support.html"},{"title":"الرسائل","icon":"comm", "url": "../account/chat.html"},{"title":" تعديل بياناتى","icon":"setting", "url": "../account/edit.html"}];

.account-sidebar
    .top-sidebar 
        .logo   
            img(src="../../assets/images/logo.png" alt="alt")
        .close-menu 
            i.fas.fa-times     
    .list-links 
        .d-flex.justify-content-start.align-items-center 
            .img.me-3 
                img(src="../../assets/images/landing/avatar.png" alt="" class="img")
            .info
                h5.fw-bold التاجر
                h6 Grocery shope
        +listLinks(listSidebar)
